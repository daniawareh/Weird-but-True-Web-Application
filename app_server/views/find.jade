extends layout

block content
  .row
    .card-columns.white-bgd.card-shadow.col-xs-12.col-sm-10.col-sm-offset-1
      .card
        .row.card-header
          h1.card-title.text-center= title
          img#logo.img-fluid.center-block.animated.jello(src="/images/find.svg", alt="Image of a magnifying glass to represent fact finder")
        .row.card-block
            p.primary-text.text-center Select an option below
        .row.card-block
          .col-md-6.col-centered
            a.btn-a.text-center(href="#")<!--/find/tags-->
              .btn.charcoal-bgd.btn-primary.center-block
                p Find by category
        .row.card-block
          .col-md-6.col-centered
            a.btn-a.text-center(href="#")<!--/find/keywords-->
              .btn.charcoal-bgd.btn-primary.center-block
                p Find by title or description
        .row.card-block
          .col-md-6.col-centered
            a.btn-a.text-center(href="#")<!--/find/all-->
              .btn.charcoal-bgd.btn-primary.center-block
                p See all